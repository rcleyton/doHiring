<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <%= image_tag 'logo.png', class: '"w-12 h-12 mr-2' %>
      doHiring    
    </a>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
              Entrar na sua conta
          </h1>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4 md:space-y-6' }) do |f| %>
            <div>
              <%= f.input :email,
              label_html: { class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"},
              autofocus: true,
              input_html: { autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" },
              placeholder: t('placeholders.email') %>
            </div>
            <div>
              <%= f.input :password,
                label_html: { class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"},
                input_html: { autocomplete: "current-password", class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' },
                placeholder: t('placeholders.password') %>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center h-5">
                <%= f.input :remember_me,
                  label: t('simple_form.options.remember_me'), label_html: { class: 'text-gray-500 dark:text-gray-300' },
                  input_html: { class: 'w-4 h-4 mr-2 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800' },
                  as: :boolean if devise_mapping.rememberable?  %>
              </div>
              <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'text-sm font-medium text-blue-600 hover:underline dark:text-primary-500' %>
            </div>
            <%= f.button :submit, t('devise.sessions.new.log_in'), class: "w-full text-white bg-purple-600 hover:bg-purple-700 focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-800" %>
            <p class="text-sm font-light text-gray-500 dark:text-gray-400">   
              <%= link_to new_registration_path(resource_name) do %>
                NÃ£o tem uma conta? <span class="devise-links">Registrar</span>
              <% end %>
            </p>
          <% end %>
      </div>
    </div>
  </div>
</section>
