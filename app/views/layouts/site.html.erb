<!DOCTYPE html>
<html>
  <head>
    <title>DoHiring</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag 'icone.ico' %>
    <%= stylesheet_link_tag 'tailwind', 'inter-font', 'data-turbo-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-white dark:bg-gray-900 h-screen flex justify-center items-center">
    <div id="flash-messages" class="fixed top-4 right-4 space-y-4" data-turbo-permanent>
      <%= render 'layouts/flash' %>
    </div>
   <%= yield %>
  </body>
</html>
