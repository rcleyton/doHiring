<div class="box">
  <h1 class="box__title">Minhas Vagas</h1>
  <hr class="divider">

  <h3 class="subtitle">Minhas candidaturas</h3>

  <% if @candidatures.empty?%>
    <h1>Nenhuma canidatura ainda</h1>
  <% else %>
    <table>
      <thead>
        <tr>
          <th class="table-applicant">TÃ­tulo da vaga</th>
          <th class="table-applicant">Status</th>
          <th class="table-applicant">Detalhes</th>
        </tr>
      </thead>
      <tbody>
        <% @candidatures.each do |candidature| %>
          <tr>
            <td><%= candidature.vacancy.title %></td>
            <td><%= candidature.status %></td>
            <td>
              <%= link_to applicants_dashboard_candidature_path(candidature) do %>
                <%= icon('fa-solid', 'eye') %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>