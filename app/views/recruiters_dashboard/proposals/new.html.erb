<div class="box">
  <h1 class="box__title">Preencher proposta para o candidato</h1>
  <hr class="divider">
  <%= @candidature %>
  <%= simple_form_for @proposal, 
  url: recruiters_dashboard_candidature_proposals_path do |form| %>
    <%= form.input :start_date, as: :string, wrapper_html: { class: 'form-control'},
                  label_html: { class: 'form-label' },
                  input_html: { type: :date, class: 'form-input'} %>
    <%= form.input :salary_offered, wrapper_html: { class: 'form-control'}, 
                              label_html: { class: 'form-label' },
                              input_html: { class: 'form-input'} %>
    <%= form.input :benefits_offered, as: 'text', wrapper_html: { class: 'form-control'}, 
                                    label_html: { class: 'form-label' },
                                    input_html: { class: 'form-input'} %>
    <%= form.input :job_functions, as: 'text', wrapper_html: { class: 'form-control'}, 
                                    label_html: { class: 'form-label' },
                                    input_html: { class: 'form-input'} %>
    <%= form.input :company_expectations, as: 'text', wrapper_html: { class: 'form-control'}, 
                                    label_html: { class: 'form-label' },
                                    input_html: { class: 'form-input'} %>
    <%= form.input :bonus, as: 'text', wrapper_html: { class: 'form-control'}, 
                                    label_html: { class: 'form-label' },
                                    input_html: { class: 'form-input'} %>
    <%= form.input :additional_information, as: 'text', wrapper_html: { class: 'form-control'}, 
                                    label_html: { class: 'form-label' },
                                    input_html: { class: 'form-input'} %>
    <%= form.button :submit, class: 'save-btn' %>
  <% end %>
</div>
