<%= form_with model: @vacancy, 
  url: (@vacancy.new_record? ?
  recruiters_dashboard_vacancies_path :
  recruiters_dashboard_vacancy_path) do |form| %>
  <%= form.hidden_field :recruiter_profile_id, value: current_recruiter.id %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :vacancy_level %>
  <%= form.text_field :vacancy_level %>

  <%= form.label :working_model %>
  <%= form.text_field :working_model %>

  <%= form.label :salary %>
  <%= form.text_field :salary %>

  <%= form.label :benefits %>
  <%= form.text_field :benefits %>

  <%= form.label :location %>
  <%= form.text_field :location %>  

  <%= form.submit class: 'btn btn-primary' %>
<% end %>