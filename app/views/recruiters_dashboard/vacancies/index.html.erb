<div class="box">
  <div class="box__options">
    <div class="option-card option-card-recruiter">
      <%= icon('fa-solid', 'suitcase') %>
      <%= link_to 'Cadastrar nova vaga', new_recruiters_dashboard_vacancy_path %> 
    </div>
  </div>
</div>

<div class="box">
<h1 class="box__title">Minhas vagas</h1>
  <hr class="divider">
  
  <% if @vacancies.empty? %>
    <h1>Nenhuma vaga publicada ainda!</h1>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Vaga</th>
          <th>Nível da Vaga</th>
          <th>Localização</th>
          <th>Status</th>
          <th>Detalhes</th>
        </tr>
      </thead>
      <tbody>
        <% @vacancies.each do |vacancy| %>
        <tr>
          <td><%= vacancy.title %></td>  
          <td>
            <% if vacancy.vacancy_level.present? %>
              <%= vacancy.vacancy_level.level %>
            <% else %>
              Nível não definido
            <% end %>
          </td>  
          <td><%= vacancy.location %></td>  
          <td><%= vacancy.status %></td>  
          <td>
            <%= link_to recruiters_dashboard_vacancy_path(vacancy) do %>
              <%= icon('fa-solid', 'eye') %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>