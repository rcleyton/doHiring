<% flash.each do |type, message| %>
  <%= render partial: 'shared/alert', locals: { type: type, message: message } %>
<% end %>
  
<%= simple_form_for @recruiter_profile,
  url: (@recruiter_profile.new_record? ? recruiters_dashboard_profile_index_path :
          recruiters_dashboard_profile_path ) do |f| %>

  <%= f.input :recruiter_id, as: :hidden, input_html: { value: current_recruiter.id} %>

  <h3 class="mt-3 mt-md-0">Foto de perfil</h3>
  <div class="row">
    <div class="col">
      <%= f.input :avatar, as: :file, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <h3 class="mt-4 mt-md-5 mb-2">Informações da empresa</h3>
  <div class="row g-0 g-md-5">
    <div class="col-md-6 col-12">
    <%= f.input :legal_name, label_html: { class: 'form-label' },
                            input_html: { class: 'form-control'} %>
    </div>
    <div class="col-md-6 col-12">
      <%= f.input :trade_name, label_html: { class: 'form-label' },
                  input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="row g-0 g-md-5">
    <div class="col-md-4 col-12">
      <%= f.input :document, label_html: { class: 'form-label' },
                  input_html: { class: 'form-control' } %>
    </div>
    <div class="col-md-4 col-12">
      <%= f.input :sector, label_html: { class: 'form-label' },
                  input_html: { class: 'form-control' } %>
    </div>
    <div class="col-md-4 col-12">
      <%= f.input :number_employee, label_html: { class: 'form-label' },
                  input_html: { class: 'form-control' } %>
    </div>
  </div>

  <h3 class="mt-5 mb-2">Sobre a empresa</h3>
  <div class="row g-0 g-md-5">
    <div class="col">
      <%= f.input :about_us, as: 'text', label_html: { class: 'form-label' },
                     input_html: { class: "form-control"} %>
    </div>
  </div>

  <h3 class="mt-5 mb-2">Informações de contato</h3>
  <div class="row g-0 g-md-5">
    <div class="col-md-6 col-12">
    <%= f.input :phone, label_html: { class: 'form-label' },
                          input_html: { class: 'form-control' } %>
    </div>
    <div class="col-md-6 col-12">
      <%= f.input :cell_phone, label_html: { class: 'form-label' },
                  input_html: { class: 'form-control' } %>
    </div>
  </div>

  <h3 class="mt-5 mb-2">Endereço</h3>
    <%= f.fields_for :address do |address_fields| %>
      <div class="row g-0 g-md-5">
        <div class="col-md-6 col-12">
          <%= address_fields.input :street, label_html: { class: 'form-label' },
                                   input_html: { class: 'form-control' } %>
        </div>
        <div class="col-md-3 col-12">
          <%= address_fields.input :number, label_html: { class: 'form-label' },
                                   input_html: { class: 'form-control' } %>
        </div>
        <div class="col-md-3 col-12">
          <%= address_fields.input :postal_code, label_html: { class: 'form-label' },
                                   input_html: { class: 'form-control' } %>
        </div>
      </div>

      <div class="row g-0 g-md-5">
        <div class="col-md-8 col-12">
          <%= address_fields.input :complement, label_html: { class: 'form-label' },
                                   input_html: { class: 'form-control' } %>
        </div>
        <div class="col-md-4 col-12">
          <%= address_fields.input :neighborhood, label_html: { class: 'form-label' },
                                   input_html: { class: 'form-control' } %>
        </div>
      </div>

      <div class="row g-0 g-md-5">
        <div class="col-md-8 col-12">
          <%= address_fields.input :city, label_html: { class: 'form-label' },
                                   input_html: { class: 'form-control' } %>
        </div>
        <div class="col-md-4 col-12">
          <%= address_fields.input :state, label_html: { class: 'form-label' },
                                   input_html: { class: 'form-control' } %>
        </div>
      </div>
    <% end %>
  <div class="my-5">
    <%= f.button :submit, "Salvar", class: 'btn btn-primary' %>
  </div>
<% end %>
