<div class="profile__head">
  <div class="profile__head--header">
    <div class="profile__head--back-btn">
      <%= link_to recruiters_dashboard_home_index_path do %>
        <%= image_tag "arrow-right.svg" %>
      <% end %>
    </div>
    <h1 class="profile__head--title-page"><%= action_message.capitalize %> perfil</h1>
  </div>
</div>

<div class="profile__body">
  <div class="profile__body--form">
    <%= simple_form_for @recruiter_profile,
      url: (@recruiter_profile.new_record? ? recruiters_dashboard_profile_index_path :
              recruiters_dashboard_profile_path ) do |f| %>

      <%= f.input :recruiter_id, as: :hidden, input_html: { value: current_recruiter.id} %>
      
      <div class="form-field">
        <%= f.input :avatar, as: :file, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-field">
        <%= f.input :legal_name, required: true, label_html: { class: 'form-label'}, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-field">
        <%= f.input :trade_name, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
      </div>
      
      <div class="form-field--col-3">
        <div class="form-field">
          <%= f.input :document, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>

        <div class="form-field">
          <%= f.input :sector, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>

        <div class="form-field">
          <%= f.input :number_employee, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>
      </div>

      <div class="form-field">
        <%= f.input :about_us, as: 'text', label_html: { class: 'form-label' }, input_html: { class: "form-control"} %>  
      </div>

      <div class="form-field">
        <%= f.input :phone, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
      </div>

      <div class="form-field">
        <%= f.input :cell_phone, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
      </div>

      <%= f.fields_for :address do |address_fields| %>
          
        <div class="form-field">
          <%= address_fields.input :street, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-field--col-3">
          <div class="form-field">
            <%= address_fields.input :number, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
          </div>

          <div class="form-field">
            <%= address_fields.input :postal_code, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
          </div>

          <div class="form-field">
            <%= address_fields.input :complement, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-field">
          <%= address_fields.input :neighborhood, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-field--col-2">
          <div class="form-field">
            <%= address_fields.input :city, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
          </div>

          <div class="form-field">
            <%= address_fields.input :state, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
          </div>
        </div>
      <% end %>
     
      <%= f.button :submit, "Salvar", class: 'btn-update' %>
    <% end %>
  </div>
</div>